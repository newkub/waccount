{
	"name": "account.wrikka.com",
	"version": "0.0.1",
	"description": "Account management for wrikka.com",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.5",
	"author": "Wrikka",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/newkub/account.wrikka.com.git"
	},
	"bugs": {
		"url": "https://github.com/newkub/account.wrikka.com/issues"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"format": "dprint fmt",
		"generate": "nuxt generate",
		"lint": "nuxt typecheck && oxlint --fix --type-aware",
		"postinstall": "nuxt prepare",
		"prepare": "lefthook install",
		"preview": "nuxt preview",
		"verify": "bun run format && bun run lint && bun run test && bun run build",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage --coverage.threshold.lines=90",
		"test:ui": "vitest --ui"
	},
